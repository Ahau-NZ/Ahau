{
  "name": "whakapapa-ora",
  "version": "0.1.0",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "dev": "concurrently \"npm run serve\" \"npm run start:dev\"",
    "dev:server": "SERVER=true nodemon .",
    "dist": "electron-builder",
    "postinstall": "npm run rebuild",
    "publish": "npm run build && npm run dist",
    "rebuild": "electron-builder install-app-deps",
    "start": "electron index.js -- --title whakapapa-ora",
    "start:dev": "NODE_ENV=development electron index.js -- --title whakapapa-ora"
  },
  "dependencies": {
    "apollo-server": "^2.9.3",
    "apollo-server-express": "^2.9.6",
    "casual": "^1.6.2",
    "concurrently": "^4.1.2",
    "core-js": "^2.6.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "pull-stream": "^3.6.14",
    "ssb-ahoy": "^2.0.0",
    "ssb-client": "^4.7.8",
    "ssb-conn": "^0.11.2",
    "ssb-invite": "^2.1.4",
    "ssb-legacy-conn": "^1.0.25",
    "ssb-master": "^1.0.3",
    "ssb-no-auth": "^1.0.0",
    "ssb-private": "^0.2.3",
    "ssb-server": "^15.1.1",
    "ssb-unix-socket": "^1.0.0",
    "vue": "^2.6.10",
    "vue-apollo": "^3.0.0-beta.11",
    "vue-router": "^3.0.3",
    "vuetify": "^2.1.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.11.0",
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "electron-builder": "^20.44.4",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "graphql-tag": "^2.9.0",
    "sass": "^1.18.0",
    "sass-loader": "^7.1.0",
    "vue-cli-plugin-apollo": "^0.21.0",
    "vue-cli-plugin-vuetify": "^1.0.1",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.2.2"
  },
  "build": {
    "appId": "org.ahau.whakapapa-ora",
    "directories": {
      "output": "dist/installers"
    },
    "linux": {
      "category": "Network",
      "target": "AppImage"
    },
    "appImage": {
      "artifactName": "${name}-Linux-${version}-${arch}.${ext}"
    },
    "dmg": {
      "artifactName": "${name}-Mac-${version}.${ext}",
      "icon": "build/dmg-icon.icns"
    },
    "win": {
      "publisherName": "Ahau"
    },
    "nsis": {
      "artifactName": "${name}-Windows-${version}.${ext}",
      "installerIcon": "build/setup-icon.ico"
    },
    "files": [
      "**/*",
      "!src/*",
      "!public/*",
      "!dist/installers*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  }
}
