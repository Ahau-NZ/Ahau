{
  "name": "ahau",
  "version": "1.0.1",
  "description": "Desktop and mobile applications for gathering and sharing whakapapa (family trees, traditional knowledge). Built using Scuttlebutt",
  "homepage": "https://gitlab.com/ahau/whakapapa-ora",
  "scripts": {
    "start:desktop": "cd desktop && npm start",
    "start:pataka": "cd pataka && npm start",
    "setup:desktop": "cd desktop && npm install",
    "setup:mobile": "cd mobile && npm install && npm run setup",
    "setup:pataka": "cd pataka && npm install",
    "dev:web": "npm run dev:mobile-server 1>&2 | npm run dev:ui",
    "dev:mobile-server": "cd mobile && npm run dev:server",
    "dev:ui": "kill-port 8080 && cd ui && npm run dev",
    "dev:desktop": "npm run dev:ui 1>&2 | npm --prefix desktop run start:dev",
    "dev:pataka": "npm --prefix pataka run start:dev",
    "dev:android": "cd mobile && npm run dev:android",
    "dev:android-update": "cd mobile && npm run dev:android-update",
    "storybook": "cd ui && npm run storybook",
    "build-ui:desktop": "cd ui && npm run build:desktop",
    "build-ui:pataka": "cd pataka && npm run build:ui",
    "build-ui:mobile": "cd ui && npm run build:mobile",
    "release:desktop": "npm run build-ui:desktop && cd desktop && npm run dist && cd .. && npm run move-release:desktop",
    "release:pataka": "npm run build-ui:pataka && cd pataka && npm run dist && cd .. && npm run move-release:pataka",
    "release:android": "cd mobile && npm run dist && cd .. && npm run move-release:android",
    "move-release:desktop": "rimraf releases/desktop && mvy desktop/dist/installers releases/desktop",
    "move-release:pataka": "rimraf releases/pataka && mvy pataka/dist/installers releases/pataka",
    "move-release:android": "rimraf releases/android && mvy mobile/platforms/android/app/build/outputs/apk/release/app-release.apk releases/android/",
    "postinstall": "cd ui && npm install",
    "db:reset": "rm -rf ~/.ahau-dev",
    "lint": "npm run lint:js && npm run lint:ui",
    "lint:js": "standard --verbose --fix 'desktop/**/*.js' 'mobile/**/*.js' 'scripts/**/*.js'",
    "lint:ui": "cd ui && npm run lint",
    "lint:pataka": "cd pataka && npm run lint",
    "test:ui": "cd ui && npm run test",
    "clear:desktop": "cd desktop && npm run clear",
    "clear:ui": "cd ui && npm run clear",
    "clear": "rm -rf node_modules",
    "clear:all": "npm run clear 1>&2 | npm run clear:desktop 1>&2 | npm run clear:ui",
    "install:desktop": "cd desktop && npm install",
    "install:ui": "cd ui && npm install",
    "install:all": "npm install 1>&2 | npm run install:desktop"
  },
  "devDependencies": {
    "husky": "^4.2.1",
    "kill-port": "^1.6.0",
    "mvy": "^0.2.1",
    "rimraf": "^3.0.1",
    "standard": "^14.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./scripts/pre-commit-lint.sh"
    }
  },
  "author": "Ä€hau Ltd.",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/ahau/whakapapa-ora.git"
  },
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://gitlab.com/ahau/whakapapa-ora/issues"
  }
}
