{
  "name": "io.ahau.whakapapa",
  "displayName": "Whakapapa",
  "version": "0.5.0",
  "description": "A mobile app for gathering and sharing whakapapa (family trees, traditional knowledge). Built using scuttlebutt",
  "author": "Ä€hau Ltd.",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/ahau/whakapapa-mobile.git"
  },
  "main": "index.js",
  "scripts": {
    "build:res": "./scripts/build-res.js",
    "dev:android": "cross-env NODE_ENV=development cross-env ./scripts/run-android.sh",
    "dev:android-update": "cross-env NODE_ENV=development cross-env ./scripts/run-android-update.sh",
    "dev:server": "cd src/nodejs-project && npm i && cross-env NODE_ENV=development nodemon index.js",
    "android-prod": "cross-env NODE_ENV=production cross-env ./scripts/run-android.sh",
    "postinstall": "./scripts/postinstall.sh",
    "setup": "cordova platform add android && cordova clean",
    "teardown": "rm -rf platforms plugins www src/node_modules"
  },
  "dependencies": {
    "cordova": "9.x",
    "cordova-android": "^8.1.0",
    "cordova-ios": "^5.1.1",
    "cordova-plugin-console": "^1.1.0",
    "cordova-plugin-keyboard": "^1.2.0",
    "cordova-plugin-splashscreen": "^5.0.3",
    "cordova-plugin-statusbar": "^2.4.3",
    "cordova-plugin-wkwebview-engine": "^1.2.1",
    "cordova-plugin-wkwebview-file-xhr": "^2.1.3",
    "nodejs-mobile-cordova": "0.3.4"
  },
  "devDependencies": {
    "chalk": "^3.0.0",
    "cordova-plugin-whitelist": "^1.3.4",
    "cpy-cli": "^3.0.0",
    "cross-env": "^6.0.3",
    "deepmerge": "^4.2.2",
    "nodemon": "^2.0.2",
    "ora": "^4.0.3",
    "patch-package": "^6.2.0",
    "rimraf": "^3.0.0",
    "sharp": "^0.23.1"
  },
  "browserslist": [
    "Android >= 7",
    "IOS >= 11",
    "Safari >= 11",
    "Chrome >= 49",
    "Firefox >= 31",
    "Samsung >= 5"
  ],
  "cordova": {
    "plugins": {
      "cordova-plugin-statusbar": {},
      "cordova-plugin-keyboard": {},
      "cordova-plugin-splashscreen": {},
      "cordova-plugin-wkwebview-file-xhr": {},
      "cordova-plugin-whitelist": {},
      "nodejs-mobile-cordova": {},
      "cordova-plugin-console": {}
    },
    "platforms": [
      "ios",
      "android"
    ]
  }
}